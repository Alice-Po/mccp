---
import Layout from '../layouts/Layout.astro';
import CompetenceSection from '../components/CompetenceSection.svelte';
import CompetenceNavigation from '../components/CompetenceNavigation.svelte';
import EnfanceJeunesse from './competences/enfance-jeunesse.astro';
import Urbanisme from './competences/urbanisme.astro';
import Enseignement from './competences/enseignement.astro';
import Tourisme from './competences/tourisme.astro';
import ActionCulturelle from './competences/action-culturelle.astro';
import PolitiqueVille from './competences/politique-ville.astro';
import Sport from './competences/sport.astro';
import ActionSociale from './competences/action-sociale-et-sante.astro';
import EmploiInsertion from './competences/emploi-insertion.astro';
import AmenagementDvlpRural from './competences/amenagement-dvlp-rural.astro';
import EnvPatrimoine from './competences/env-patrimoine.astro';
import LogementHabitat from './competences/logement-habitat.astro';
import Securite from './competences/securite.astro';
---

<Layout title="Compétences - MCC Putanges-le-Lac">
  <main class="competences-main">
    <div class="competences-layout">
      <CompetenceNavigation client:load />
      
      <div class="competences-content">
        <div class="content-wrapper">
          <h1>Compétences municipales et intercommunales</h1>
          
          <section class="text-section">
            <p>
              Les compétences exercées par la commune de Putanges-le-Lac et la Communauté de Communes du Val d'Orne. 
            
            </p>
            <small>source : <a href="https://www.collectivites-locales.gouv.fr/files/Comp%C3%A9tences/1.%20les%20comp%C3%A9tences/Tableau%20r%C3%A9paratition%20des%20comp%C3%A9tences_actualisation%20au%20220825.pdf">https://www.collectivites-locales.gouv.fr</a></small>
          </section>

          <section class="competences-section">
        <CompetenceSection title="Sécurité" client:load>
          <Securite />
        </CompetenceSection>

        <CompetenceSection title="Action Sociale et Santé" client:load>
          <ActionSociale />
        </CompetenceSection>
        <CompetenceSection title="Emploi et Insertion" client:load>
          <EmploiInsertion />
        </CompetenceSection>
        <CompetenceSection title="Enfance et Jeunesse" client:load>
          <EnfanceJeunesse />
        </CompetenceSection>

        <CompetenceSection title="Urbanisme et Aménagement" client:load>
          <Urbanisme />
        </CompetenceSection>

        <CompetenceSection title="Enseignement" client:load>
          <Enseignement />
        </CompetenceSection>

        <CompetenceSection title="Tourisme" client:load>
          <Tourisme />
        </CompetenceSection>

        <CompetenceSection title="Action Culturelle" client:load>
          <ActionCulturelle />
        </CompetenceSection>

        <CompetenceSection title="Politique de la Ville" client:load>
          <PolitiqueVille />
        </CompetenceSection>

        <CompetenceSection title="Sport" client:load>
          <Sport />
        </CompetenceSection>

    

     

        <CompetenceSection title="Aménagement du Territoire" client:load>
          <AmenagementDvlpRural />
        </CompetenceSection>

        <CompetenceSection title="Environnement et Patrimoine" client:load>
          <EnvPatrimoine />
        </CompetenceSection>

        <CompetenceSection title="Logement et Habitat" client:load>
          <LogementHabitat />
        </CompetenceSection>

          </section>
        </div>
      </div>
    </div>
  </main>
</Layout>

