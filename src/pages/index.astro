    line-height: 1.2;
  }

  .title-section p {
    font-family: var(--font-main);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--secondary);
  }

  h2 {
    font-family: var(--font-main);
    font-size: 2.2rem;
    font-weight: 600;
    color: var(--primary);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    color: var(--secondary);
    font-size: 1.3rem;
  }

  li span {
    display: none;
  }

  strong {
    font-family: var(--font-main);
    color: var(--secondary);
    font-weight: 700;
    position: relative;
    display: inline-block;
    padding: 0 0.2rem;
    background: linear-gradient(180deg, 
      transparent 65%, 
      rgba(46, 139, 87, 0.2) 65%
    );
  }

  .text-section {
    text-align: center;
    max-width: 55rem;
    margin: 0 auto;
    color: var(--secondary);
  }

  .text-section p {
    margin-bottom: 2rem;
    font-size: 1.3rem;
  }

  .values-section li {
    font-family: var(--font-main);
    font-size: 1.3rem;
    font-weight: 500;
  }

  .contact-section {
    text-align: center;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  .contact-links a {
    color: var(--secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 1.3rem;
  }

  .contact-links span {
    font-size: 1.4rem;
