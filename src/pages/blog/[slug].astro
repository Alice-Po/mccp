---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  
  return posts.map(post => {
    // Générer un slug directement ici sans fonction auxiliaire
    const slug = post.slug || post.data.title
      .toLowerCase()
      .replace(/[^\w\s]/g, '')
      .replace(/\s+/g, '-');
    
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title}>
  <main>
    <article class="blog-post">
      <div class="post-header">
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('fr-FR')}
          </time>
        </div>
      </div>

      {post.data.image && (
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="post-image"
        />
      )}

      <div class="post-content">
        <p class="description">{post.data.description}</p>
        
        <!-- Contenu de l'article -->
        <div class="article-body">
          <Content />
        </div>
        
        <!-- Boutons de navigation -->
        <div class="article-navigation">
          <a href="/blog" class="nav-button secondary-button">
            <span class="nav-icon">←</span> Retour aux actualités
          </a>
          <a href="/" class="nav-button primary-button">
            Retour à l'accueil
          </a>
        </div>
      </div>
    </article>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .description {
    line-height: 1.6;
    margin-bottom: 2rem;
    height: auto;
    min-height: fit-content;
    display: block;
  }
</style>