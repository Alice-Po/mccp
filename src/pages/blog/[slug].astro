---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  console.log('Posts pour getStaticPaths:', posts); // Debug
  
  return posts.map(post => {
    // Générer un slug directement ici sans fonction auxiliaire
    const slug = post.slug || post.data.title
      .toLowerCase()
      .replace(/[^\w\s]/g, '')
      .replace(/\s+/g, '-');
    
    console.log('Slug généré:', slug); // Debug
    
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
---

<Layout title={post.data.title}>
  <main>
    <article class="blog-post">
      <div class="post-header">
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('fr-FR')}
          </time>
          <span class="author">par {post.data.author}</span>
        </div>
      </div>

      {post.data.image && (
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="post-image"
        />
      )}

      <div class="post-content">
        <p>{post.data.description}</p>
        
        <!-- Contenu de l'article -->
        <div class="article-body">
          {post.body && <p>{post.body}</p>}
        </div>
      </div>
    </article>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .blog-post {
    background-color: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .post-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 2rem 1rem 0;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--secondary);
    margin-bottom: 1rem;
  }

  .post-meta {
    color: var(--secondary);
    opacity: 0.8;
    font-size: 0.9rem;
  }

  .post-image {
    width: 100%;
    height: auto;
    max-height: 500px;
    object-fit: cover;
    margin-bottom: 2rem;
  }

  .post-content {
    padding: 0 2rem 2rem;
    line-height: 1.8;
    font-size: 1.1rem;
    color: var(--secondary);
  }

  .author {
    margin-left: 1rem;
  }

  .article-body {
    margin-top: 2rem;
  }
</style>