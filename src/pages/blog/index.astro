---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
console.log('Posts r√©cup√©r√©s:', posts); // Debug

const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// Fonction pour g√©n√©rer un slug √† partir du titre
function generateSlug(title: string) {
  return title
    .toLowerCase()
    .replace(/[^\w\s]/g, '')
    .replace(/\s+/g, '-');
}

// Configuration statique pour les articles de presse
const pressArticles = [
  {
    title: "Le Mouvement citoyen des communes de Putanges veut cr√©er une liste avec les habitants",
    source: "Ouest-France",
    date: "2025-07-05",
    journaliste : "Dani√®le FOUREY",
    description: "Le mouvement citoyen des communes de Putanges veut cr√©er une liste avec les habitants",
    pdfUrl: "/assets/img/Le Mou_ve_ment citoyen veut une liste avec les habi_tants.pdf"
  }
];
---

<Layout title="Actualit√©s - MCCP">
  <main>
    <div class="back-home">
      <a href="/" class="home-button">
        <span class="home-icon">‚Üê</span> Retour √† l'accueil
      </a>
    </div>
    
    <div class="blog-index">
      <h1>Actualit√©s</h1>
      
      <div class="blog-grid">
        {sortedPosts.map(post => {
          // G√©n√©rer un slug √† partir du titre si post.slug est undefined
          const slug = post.slug || generateSlug(post.data.title);
          
          return (
          <article class="news-card">
                <a href={`/blog/${slug}`} class="card-link">
                  {post.data.image && (
                    <img src={post.data.image} alt={post.data.title} />
                  )}
                  <div class="news-content">
                    <h3>{post.data.title}</h3>
                    <div class="post-meta">
                      <time datetime={post.data.pubDate.toISOString()}>
                        {post.data.pubDate.toLocaleDateString('fr-FR')}
                      </time>
                    </div>
                    <p class="description">{post.data.description}</p>
                    <span class="read-more">
                      Lire la suite ‚Üí
                    </span>
                  </div>
                </a>
              </article>
          );
        })}
      </div>

      <!-- Section Presse compacte -->
      <section class="press-section">
        <h2>Presse - On parle de nous !</h2>
        <ul class="press-list">
          {pressArticles.map(article => (
            <li class="press-list-item">
              <div class="press-info">
                <div class="press-title">{article.title}</div>
                <div class="press-meta">
                  <span class="press-source">{article.source}</span>
                  <span class="press-date">{new Date(article.date).toLocaleDateString('fr-FR')}</span>
                  {article.journaliste && (
                    <span class="press-journalist">par {article.journaliste}</span>
                  )}
                </div>
                <div class="press-description">{article.description}</div>
              </div>
              <a href={article.pdfUrl} target="_blank" rel="noopener noreferrer" class="press-pdf-btn">
                <span class="pdf-icon">üìÑ</span>
                <span class="pdf-text">PDF</span>
              </a>
            </li>
          ))}
        </ul>
      </section>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .back-home {
    margin-bottom: 2rem;
  }
  
  .home-button {
    display: inline-flex;
    align-items: center;
    padding: 0.7rem 1.2rem;
    background-color: rgba(46, 139, 87, 0.1);
    color: var(--primary);
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    font-family: var(--font-main);
  }
  
  .home-button:hover {
    background-color: rgba(46, 139, 87, 0.2);
    transform: translateY(-2px);
  }
  
  .home-icon {
    margin-right: 0.5rem;
    font-size: 1.2rem;
  }

  /* Section Presse compacte */
  .press-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid rgba(46, 139, 87, 0.1);
  }
  .press-section h2 {
    color: var(--primary);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    text-align: left;
  }
  .press-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }
  .press-list-item {
    display: flex;
