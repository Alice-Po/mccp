    flex: 1 1 auto;
    min-width: 0;
  }
  .press-title {
    font-weight: 600;
    font-size: 1.08rem;
    color: var(--primary);
    margin-bottom: 0.2rem;
    line-height: 1.2;
  }
  .press-meta {
    font-size: 0.92rem;
    color: #666;
    margin-bottom: 0.3rem;
    display: flex;
    gap: 1.2rem;
  }
  .press-source {
    font-weight: 500;
  }
  .press-date {
    font-style: italic;
  }
  .press-description {
    font-size: 0.97rem;
    color: #444;
    margin-bottom: 0;
    line-height: 1.4;
  }
  .press-pdf-btn {
    display: inline-flex;
    align-items: center;
    background: var(--primary);
    color: #fff;
    border-radius: 6px;
    padding: 0.45rem 0.9rem;
    font-weight: 500;
    font-size: 0.98rem;
    text-decoration: none;
    margin-left: 1.5rem;
    transition: background 0.18s, box-shadow 0.18s;
    box-shadow: 0 1px 4px rgba(46,139,87,0.08);
  }
  .press-pdf-btn:hover {
    background: #2d8a5a;
  }
  .pdf-icon {
    font-size: 1.15rem;
    margin-right: 0.4em;
  }
  @media (max-width: 700px) {
    .press-list-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.7rem;
      padding: 1rem 1rem;
    }
    .press-pdf-btn {
      margin-left: 0;
      width: 100%;
      justify-content: center;
    }
  }
  .press-journalist {
    font-size: 0.9em;
    color: #888;
    font-style: italic;
    margin-left: 1.2rem;
  }
</style> 