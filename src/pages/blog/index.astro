---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
console.log('Posts récupérés:', posts); // Debug

const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// Fonction pour générer un slug à partir du titre
function generateSlug(title: string) {
  return title
    .toLowerCase()
    .replace(/[^\w\s]/g, '')
    .replace(/\s+/g, '-');
}
---

<Layout title="Blog - MCCP">
  <main>
    <div class="blog-index">
      <h1>Actualités</h1>
      
      <div class="blog-grid">
        {sortedPosts.map(post => {
          // Générer un slug à partir du titre si post.slug est undefined
          const slug = post.slug || generateSlug(post.data.title);
          
          return (
            <article class="blog-card">
              {post.data.image && (
                <img src={post.data.image} alt={post.data.title} />
              )}
              <div class="blog-content">
                <h2>{post.data.title}</h2>
                <p class="description">{post.data.description}</p>
                <div class="post-meta">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('fr-FR')}
                  </time>
                  <span class="author">par {post.data.author}</span>
                </div>
                <a href={`/blog/${slug}`} class="read-more">
                  Lire la suite →
                </a>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--primary);
    text-align: center;
    margin-bottom: 3rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .blog-card {
    border: 1px solid #eaeaea;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
  }

  .blog-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .blog-content {
    padding: 1.5rem;
  }

  h2 {
    font-size: 1.4rem;
    color: var(--secondary);
    margin-bottom: 0.5rem;
  }

  .description {
    color: var(--secondary);
    opacity: 0.8;
    margin-bottom: 1rem;
  }

  .post-meta {
    font-size: 0.9rem;
    color: var(--secondary);
    opacity: 0.7;
    margin: 1rem 0;
  }

  .author {
    margin-left: 1rem;
  }

  .read-more {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
  }
</style> 